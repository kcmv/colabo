{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "listFiles": true
    },
    "allowSyntheticDefaultImports": false,
    "exclude": [
        "node_modules",
        "typings/main.d.ts",
        "typings/main/**"
    ],
    "compileOnSave": false
}
