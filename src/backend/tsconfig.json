{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "listFiles": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "allowSyntheticDefaultImports": false,
    "files": [
        "KnAllEdgeBackend.ts",
        "modules/smsapi.ts"
    ],
    "include": [
        "dev_puzzles"
    ],
    "exclude": [
        "**/*d.ts"
    ],
    "compileOnSave": false
}